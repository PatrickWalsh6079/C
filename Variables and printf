#include <stdio.h>
#include <stdlib.h>

//This program prints text onto the screen to tell a short story.
//It uses the string and integer variables to change information in the story.

int main()
{
    char characterName[] = "Bro";
    int characterAge = 35;

    printf("There once was a man named %s\n", characterName);
    printf("he was %d years old.\n", characterAge);

    characterAge = 40;
    printf("He really liked the name %s,\n", characterName);
    printf("but he did not like being %d.\n", characterAge);

    return 0;
}
